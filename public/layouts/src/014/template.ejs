        <div class="hbox quarter">
          <img src="<%= image2 %>">
        </div>
        <div class="hbox">
          <h5><%= title2 %></h5>
          <p><%= content2 %></p>
        </div>
      </div>
      <div class="vbox card">
        <div class="hbox quarter">
          <img src="<%= image3 %>">
        </div>
        <div class="hbox">
          <h5><%= title3 %></h5>
          <p><%= content3 %></p>
        </div>
      </div>
    </div>
  </div>
</div>
