<div class="container">
  <% if (sectionTitle) { %>
    <div class="vbox">
      <h6><%= sectionTitle %></h6>
    </div>
  <% } %>
  <div class="vbox">
    <header class="hbox quarter">
      <h5><%= title %></h5>
      <p><%= content %></p>
    </header>
    <div class="hbox expand card-list">
      <div class="vbox card">
        <div class="hbox quarter">
          <img src="<%= image1 %>">
        </div>
        <div class="hbox">
          <h5><%= title1 %></h5>
          <p><%= content1 %></p>
        </div>
      </div>
