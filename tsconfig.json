{
  "compilerOptions": {
    "allowJs": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFragmentFactory": "Fragment",
    "jsxFactory": "h",
    "outDir": "./dist",

    "useDefineForClassFields": false,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [ "./dist" ]
}
